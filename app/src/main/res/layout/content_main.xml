<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="185dp"
            android:layout_height="181dp" app:srcCompat="@mipmap/logo_easy_stop"
            android:id="@+id/imgvAppMain"
            android:contentDescription="@string/logo_app_descr"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="@string/lbl_descr_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescrApp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvAppMain" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>